{
  "name": "github-workflow-dispatch-example",
  "version": "1.0.0",
  "description": "Repo to test out github workflows",
  "main": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "lint": "eslint . --fix",
    "start": "node ./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Oli-Ward/github-workflow-dispatch-example.git"
  },
  "author": "Oli Ward",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Oli-Ward/github-workflow-dispatch-example/issues"
  },
  "homepage": "https://github.com/Oli-Ward/github-workflow-dispatch-example#readme",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "globals": "^15.13.0",
    "nodemon": "^3.1.9",
    "release-it": "^17.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release) v${version}",
      "requireBranch": "main"
    },
    "hooks": {
      "before:init": [
        "git pull",
        "npm run lint",
        "npm run test"
      ],
      "after:bump": "npx auto-changelog -p"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "npm": {
      "publish": true
    }
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "fastify": "^4.29.0"
  }
}
